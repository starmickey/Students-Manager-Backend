generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Pin {
  id         Int       @id @default(autoincrement())
  name       String
  removeDate DateTime?
}

model Child {
  id          Int       @id @default(autoincrement())
  name        String
  surname     String
  birthDay    DateTime?
  dni         String?
  address     String?
  createdDate DateTime  @default(now())
  updateDate  DateTime  @default(now())
  removeDate  DateTime?
}
